<div class="logo_and_tag">
  <img src="assets/shogogo.svg" onerror="this.onerror=null; this.src='shogogo.png'" id="logo">
  <h1 id="slogan">No show left behind.</h1>
</div>
<div class="row fullWidth">

  <div class="small-9 large-12 columns">
  
  <div class="search_container search_container_left">
      <input type="text" name="artist-search" id="search_box" placeholder="search for favorite artists..."/>
      
      <h2 id="search_message">Start tracking your favorite artists.<br>Get text updates of upcoming shows near you.</h2>
      
      <div id="band_container">
        <div class="local_shows_list"></div>
      </div>
    </div>
  </div>

  <div class="small-3 large-0 columns favorites_menu nofaves" id="favorites-menu">
    <button class="favorites_save">Notify Me!</div> 
  </div>
</div>

<%= javascript_tag do %>
  var GEOIP = {};
  GEOIP.lon = '<%= @geoinfo[1] %> ' ;
  GEOIP.lat = '<%= @geoinfo[0] %> ' ;

<% end %>