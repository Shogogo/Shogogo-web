<div class="signup">
  <h4 id="sign_up_message">Login to edit your favorites.</h4>
  <form name="login" id="login_form" action="/sessions" method="post">
    <input type='tel' name="phone_number" placeholder="phone number (numbers only)" maxlength="10" id="login_phone" required>
    <input type='password' name="password" placeholder="password" id="login_password" required >
    <input type="submit" value="Login">
  </form>
</div>